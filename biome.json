{
    "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noForEach": "off",
                "noStaticOnlyClass": "off",
                "noUselessConstructor": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "warn",
                "noConsole": "off",
                "noAssignInExpressions": "off",
                "noExplicitAny": "warn"
            },
            "correctness": {
                "noUnusedVariables": "error"
            },
            "style": {
                "noNonNullAssertion": "warn",
                "useImportType": "off"
            }
        }
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        },
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "all"
        }
    },
    "files": {
        "includes": [
            "**",
            "!pgdata/*",
            "!.vscode/*",
            "!etc/docs/db/tbls/*",
            "!etc/openapi/openapi.*",
            "!etc/openapi/wip/openapi.*"
        ]
    }
}