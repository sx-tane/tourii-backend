{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noForEach": "off",
                "noStaticOnlyClass": "off",
                "noUselessConstructor": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "warn",
                "noConsoleLog": "error",
                "noAssignInExpressions": "off",
                "noExplicitAny": "warn"
            },
            "correctness": {
                "noUnusedVariables": "error"
            },
            "style": {
                "noNonNullAssertion": "warn",
                "useImportType": "off"
            }
        }
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        },
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "all"
        }
    },
    "files": {
        "ignore": [
            "pgdata/*",
            ".vscode/*",
            "etc/docs/db/tbls/*",
            "etc/openapi/openapi.*",
            "etc/openapi/wip/openapi.*"
        ]
    }
}