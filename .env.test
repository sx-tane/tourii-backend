# Test Environment Configuration
# This file is used for running automated tests with a separate test database

# Test Database Configuration (port 7443 to avoid conflicts with dev database on 7442)
MIGRATION_URL=postgresql://touriibackenddev:touriibackenddev@localhost:7443/tourii_backend_test
DATABASE_URL=postgresql://touriibackenddev:touriibackenddev@localhost:7443/tourii_backend_test

# Logging Configuration
LOGGING_LEVEL="error"
NODE_ENV="test"

# Application Ports
TOURII_BACKEND_PORT=4010
TOURII_ONCHAIN_PORT=4011

# Security Settings (test values)
JWT_SECRET="test-jwt-secret-for-testing"
ENCRYPTION_KEY="test-encryption-key-32-chars-long"

# API Settings
EXPORT_OPENAPI_JSON=false
THROTTLE_TTL=60
THROTTLE_LIMIT=100
CORS_ORIGIN=*

# Test API Keys (dummy values)
GOOGLE_MAPS_API_KEY=test-maps-key
GOOGLE_PLACES_API_KEY=test-places-key
OPEN_WEATHER_API_KEY=test-weather-key
API_KEYS=test-api-key-1,test-api-key-2
