# HTTP Configuration
HTTP_DEFAULT_TIMEOUT=5000
HTTP_DEFAULT_RETRIES=1

# Weather Settings
WEATHER_CACHE_TTL_SECONDS=300  # 5 minutes for tests
WEATHER_API_TIMEOUT=5000       # 5 seconds for tests
WEATHER_ENABLE_FUZZY_LOOKUP=true

# Test Storage Configuration (dummy values)
